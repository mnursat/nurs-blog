<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NursBlog 📒</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/froala-editor/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/lib/froala-editor/js/froala_editor.pkgd.min.js"></script>
</head>
<body class="bg-white min-h-screen flex flex-col">
    <header class="border-b-2">
        <nav class="container mx-auto items-center justify-between p-4">
            <div>
                <a asp-controller="Home" asp-action="Index" class="text-2xl">📒</a>
                <a asp-controller="Home" asp-action="Index" class="text-2xl ms-4">Посты</a>
                <a asp-controller="Home" asp-action="Index" class="text-2xl ms-4">Обо мне</a>
            </div>
        </nav>
    </header>
    <div class="container mx-auto p-4 flex-grow">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="w-full flex flex-row justify-center mx-auto px-2 py-4 space-x-2 border-t-2">
            <a class="" href="https://github.com/mnursat" target="_blank">
                <img class="w-7" src="~/images/icons/github.png" />
            </a>
            <a class="" href="https://github.com/mnursat" target="_blank">
                <img class="w-7" src="~/images/icons/email.png" />
            </a>
            <a class="" href="https://github.com/mnursat" target="_blank">
                <img class="w-7" src="~/images/icons/linkedin.png" />
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
