<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NursBlog 📒</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-white">
    <header class="container mx-auto p-4">
        <a asp-controller="Home" asp-action="Index" class="text-2xl">📒</a>
        <a asp-controller="Home" asp-action="Index" class="text-2xl ms-4">Посты</a>
        <a asp-controller="Home" asp-action="Index" class="text-2xl ms-4">Обо мне</a>
    </header>
    <div class="container mx-auto p-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
